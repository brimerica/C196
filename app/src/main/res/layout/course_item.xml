<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    tools:context=".TermActivity"
    android:backgroundTint="@color/cardview_shadow_start_color">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/edit_course_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="4dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_edit_black"/>

        <TextView
            android:id="@+id/course_view_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/course_view_title"
            android:textSize="16sp"
            android:text="Start Date" />

        <TextView
            android:id="@+id/course_view_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4sp"
            android:layout_below="@id/course_view_start_date"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:text="End Date" />

        <TextView
            android:id="@+id/course_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4sp"
            android:text="Title"
            android:textSize="22sp"
            android:maxLines="1"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/edit_course_btn"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/course_view_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4sp"
            android:text="Status"
            android:textSize="18sp"
            android:maxLines="1"
            android:layout_toStartOf="@id/course_view_start_date"
            android:layout_toEndOf="@id/edit_course_btn"
            android:layout_alignBottom="@id/course_view_end_date"
            android:ellipsize="end" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>